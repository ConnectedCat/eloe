package {	import flash.display.Shape;	import flash.display.Sprite;	public class Line extends Sprite	{		private var line:Shape;		public function Line(name : String, parent : Sprite, _x : int, _y : int, thickness:uint, color:uint)		{			this.name = name;			parent.addChild(this);						line = new Shape();			line.graphics.moveTo(_x, _y);			line.graphics.lineStyle(thickness, color);		}		// constructor code;		public function drawLine(_x : Number, _y: Number):void		{			line.graphics.lineTo(_x, _y);		}	}}