package {	import flash.events.*;	import flash.display.*;	public class Test extends Sprite	{		public function Test()		{			stage.addEventListener(MouseEvent.MOUSE_DOWN, startDraw);			stage.addEventListener(MouseEvent.MOUSE_MOVE, moveDraw);			//stage.addEventListener(MouseEvent.MOUSE_UP, endDraw);		}//end constructor		public function startDraw(e:MouseEvent):void{			new Line("line1", this, mouseX, mouseY, 7, 0x00AF12);			trace("Created new Line!");		}		public function moveDraw(e:MouseEvent):void{			var line:Line = getChildByName("line1") as Line;			line.drawLine(mouseX, mouseY);		}	}//end class}//end package